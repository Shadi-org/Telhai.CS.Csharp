<Window x:Class="Telhai.CS.Csharp._05_WpfLinq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telhai.CS.Csharp._05_WpfLinq"
        mc:Ignorable="d"
        Title="Song Manager" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Label Name="lbl" Grid.ColumnSpan="2" Content="Songs Manager" Background="AliceBlue" HorizontalAlignment="Stretch" FontSize="20px" FontWeight="Bold" VerticalAlignment="Top"/>

        <!-- Control Panel -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Background="AliceBlue" Margin="5">
            <Button Name="btnLoad" Margin="5" Padding="10" Content="Load 50 Songs" Click="btnLoad_Click"/>
            <Button Name="btnDelete" Margin="5" Padding="10" Content="Delete Song" Click="btnDelete_Click"/>
            <Button Name="btnSortDuration" Margin="5" Padding="10" Content="Sort by Duration" Click="btnSortDuration_Click"/>
            <Button Name="btnSortTitle" Margin="5" Padding="10" Content="Sort by Title" Click="btnSortTitle_Click"/>
            <Button Name="btnShortHits" Margin="5" Padding="10" Content="Short Hits (&lt;0.3 min)" Click="btnShortHits_Click"/>
            <Button Name="btnGroupByArtist" Margin="5" Padding="10" Content="Group by Artist" Click="btnGroupByArtist_Click"/>
        </StackPanel>

        <!-- Add Song Section -->
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Add New Song" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Artist:" VerticalAlignment="Center"/>
                <TextBox Name="txtArtist" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>
                <Label Grid.Column="2" Content="Title:" VerticalAlignment="Center"/>
                <TextBox Name="txtTitle" Grid.Column="3" Margin="5" VerticalAlignment="Center"/>
                <Label Grid.Column="4" Content="Duration:" VerticalAlignment="Center"/>
                <TextBox Name="txtDuration" Grid.Column="5" Margin="5" VerticalAlignment="Center" Width="60"/>
                <Button Name="btnAddSong" Grid.Column="6" Margin="5" Padding="10" Content="Add" Click="btnAddSong_Click"/>
            </Grid>
        </GroupBox>

        <!-- Search Section -->
        <GroupBox Grid.Row="2" Grid.Column="1" Header="Search" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Search:" VerticalAlignment="Center"/>
                <TextBox Name="txtSearch" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>
                <Button Name="btnSearch" Grid.Column="2" Margin="5" Padding="10" Content="Search" Click="btnSearch_Click"/>
            </Grid>
        </GroupBox>

        <!-- Statistics Section -->
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <Label Content="Total Duration:" FontWeight="Bold" VerticalAlignment="Center"/>
            <Label Name="lblTotalDuration" Content="0.00 min" VerticalAlignment="Center" Margin="5,0"/>
            <Label Content="Avg Length:" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <Label Name="lblAvgLength" Content="0.00 min" VerticalAlignment="Center" Margin="5,0"/>
            <Label Content="Longest Song:" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <Label Name="lblLongestSong" Content="N/A" VerticalAlignment="Center" Margin="5,0"/>
        </StackPanel>

        <!-- Songs ListBox -->
        <ListBox Name="songsListBox" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Background="WhiteSmoke" Margin="5" SelectionChanged="songsListBox_SelectionChanged"/>

        <!-- Status Bar -->
        <StatusBar Grid.Row="5" Grid.ColumnSpan="2" Background="AliceBlue">
            <StatusBarItem>
                <Label Name="lblStatus" Content="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
